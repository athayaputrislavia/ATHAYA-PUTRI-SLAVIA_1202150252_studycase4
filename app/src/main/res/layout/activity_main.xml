<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.athaya.athayaputrislavia_1202150252_studycase4.MainActivity">

    //membuat tampilan button
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        android:text="List Nama Mahasiswa"
        android:layout_gravity="center"
        android:layout_marginTop="150sp"
        android:onClick="list"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pencari"
        android:text="Pencari Gambar"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:onClick="pencarian"/>
</LinearLayout>
